<% include includes/head %>
<title><%= title %></title>
<% include includes/style %>
</head>
<body>
<header>
	<% include includes/top %>
</header>

<article class="wrap container">
	<section class="userhead">
		<% if(userhead) { %>
			<img src="<%= userhead.userhead%>">
		<% } else { %>
			<img src="/files/userhead/default-head.jpg">
		<% } %>
		<div class="modify-head"><a href="/blog/uphead">修改</a></div>
	</section>
	<section class="post-edit">
		<% if (posts.length != 0) { %>
			<% posts.forEach(function (post, index) { %>
			<div class="post-list">
				<h2><a href="/blog/u/<%= post.username %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2>
				<p class="info">
					作者：<a href="/blog/u/<%= post.username%>/"><%= post.username %></a> |
					日期：<%= post.time.minute %>
					标签：
					<% post.tags.forEach(function (tag, index) { %>
						<% if (tag) { %>
							<a class="tag" href="/blog/tag/<%= tag %>"><%= tag %></a>
						<% } %>
					<% }) %>
				</p>
				<p><%- post.abstract %> <a href="/blog/u/<%= post.username %>/<%= post.time.day %>/<%= post.title %>">阅读...</a></p>

					<p class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
				</div>
			<% }) %>
		<% } else { %>
			<div class="post-none">
				还没有博客呦~ 赶紧去发一篇吧~~~
				<a title="写博客" href="/blog/post">写博客</a>
			</div>
		<% } %>
		
		<% include includes/paging %>
	</section>
</article>

<footer></footer>

<% include includes/script %>
<% include includes/foot %>