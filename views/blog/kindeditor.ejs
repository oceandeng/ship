<% include includes/head %>
<title><%= title %></title>
<% include includes/style %>
<script src="/kindeditor/kindeditor-all-min.js"></script>
<script src="/kindeditor/lang/zh-CN.js"></script>
</head>
<body>

<header>
	<% include includes/top %>
</header>

<article class="wrap container">
	<% include includes/userhead %>
	<section class="post-edit">
		<form method="post">
			<h3>标题：</h3>
			<div class="p-tit"><input type="text" name="title" /></div>

			<h3>标签：</h3>
			<div class="p-tag-box">
				<div class="p-tag"><input type="text" name="tag1" /></div>
				<div class="p-tag"><input type="text" name="tag2" /></div>
				<div class="p-tag"><input type="text" name="tag3" /></div>
			</div>

			<h3>正文：</h3>

			<textarea class="textarea" name="post"></textarea>

			<div id="subBtn" class="sub-btn"><input type="submit" value="发表" /></div>
		</form>
	</section>
</article>

<footer></footer>

<% include includes/script %>

<script>
	var editor;
	KindEditor.ready(function(K){
		editor = K.create('textarea', {
			width: '100%',
			height: '320px',
			allowImageUpload: false,
			items: [
				'source', 'fontname', 'fontsize', '|', 'forecolor', 'hilitecolor', 'bold', 'italic', 'underline', 'removeformat', '|', 'justifyleft', 'justifycenter', 'justifyright', 'insertorderedlist', 'insertunorderedlist', '|', 'emoticons', 'image', 'link'
			]
		});
	});
</script>

<% include includes/foot %>