<% include includes/head %>
<title><%= title %></title>
<% include includes/style %>
</head>
<body>

<header><% include includes/top %></header>

<article class="wrap container">
	<section id="userHead" class="userhead">
		<% if(userhead) { %>
			<img src="<%= userhead.userhead%>">
		<% } else { %>
			<img src="/files/userhead/default-head.jpg">
		<% } %>
	</section>
	<section class="post-edit">
			<div id="uphead">
				<div id="headImg"></div>
				<input type="file" name="userhead" id="file">
				<div id="upheadBtn" class="uphead-btn"><span>选择图片</span></div>
				<div class="tips">目前只支持正方形头像上传~否则头像会LOW哦~随后会升级功能的~</div>
			</div>
	</section>
</article>

<footer></footer>

<% include includes/script %>

<script>
	$(function(){
		var $file = $('#file');

		$('#upheadBtn').on('click', function(){
			$file.click();
		});

		$file.on('change', function(e){
			// 从事件中获取选中的所有文件
			var file = e.target.files || e.dataTransfer.files;

			uploadFile({
				url: '/blog/uphead',
				file: file
			})

		});

	});

    function uploadFile(obj) {
        var xhr = new XMLHttpRequest();
        // xhr.addEventListener("load", .uploadComplete, false);
        // xhr.addEventListener("error", uploadFailed, false);
        // xhr.addEventListener("abort", uploadCanceled, false);
        xhr.open("POST", obj.url, true);

        var fd = new FormData();

        fd.append($('#file').attr('name'), obj.file[0]);

        xhr.send(fd);
        xhr.onreadystatechange=function(){
        	if(xhr.readyState == 2){
        		return;
        	}
            if(xhr.readyState == 4){
                if(xhr.status == 200){
                	console.log('上传成功！');
                	var res = JSON.parse(xhr.response);

                	var img = new Image();
                	img.onload = function(){
						$('#userHead').find('img').attr('src', img.src);
                	}
                	img.src = res.userhead;


                	console.log(res.userhead);
		        }else{
		            console.log("获取数据错误！错误代号："+ xhr.status +"错误信息："+ xhr.statusText);
		        }
            }
        }
    };

</script>

